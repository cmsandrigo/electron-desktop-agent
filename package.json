{
  "name": "hermes-desktop-agent",
  "version": "1.0.0",
  "description": "Desktop Agent for Hermes Web - Folder IT",
  "main": "main.js",
  "scripts": {
    "start": "electron ."
  },
  "repository": "https://github.com/electron/electron-quick-start",
  "keywords": [
    "FolderIT",
    "Hermes",
    "ERP",
    "DesktopAgent",
    "Electron"
  ],
  "author": "FolderIT",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "~9.1.0",
    "node-simple-router": "^0.10.1"
  },
  "build": {
    "appId": "com.folderit.hermes.desktopagent",
    "files": [
      "out",
      "node_modules"
    ],
    "mac": {
      "category": "public.app-category.graphics-design"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
